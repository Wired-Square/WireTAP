{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WireTAP",
  "mainBinaryName": "WireTAP",
  "version": "0.5.0",
  "identifier": "com.wiredsquare.wiretap",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "dashboard",
        "title": "WireTAP",
        "width": 900,
        "height": 600,
        "minWidth": 700,
        "minHeight": 500,
        "resizable": true,
        "dragDropEnabled": false,
        "acceptFirstMouse": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "examples/*": "examples/"
    },
    "macOS": {
      "infoPlist": "Info.plist"
    }
  }
}
